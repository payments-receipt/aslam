<body>
    <div class="clock-container"><div id="pk-time">00:00:00 AM</div></div>
    <div class="main-card">
        <h1>PRO KEY GEN</h1>
        <div class="input-group"><label>Paste Device ID</label><input type="text" id="devID" placeholder="Ex: 4523"></div>
        <div class="btn-grid">
            <button class="btn-dur" onclick="generate(60, this)">1 MIN</button>
            <button class="btn-dur" onclick="generate(604800, this)">1 WEEK</button>
            <button class="btn-dur" onclick="generate(2592000, this)">1 MONTH</button>
        </div>
        <div id="result-box">
            <label>Premium Key:</label>
            <div class="key-display" id="keyOutput">...</div>
            <button class="copy-btn" onclick="copyKey()">Copy Key</button>
        </div>
    </div>
    <div class="overlay" id="overlay"></div>
    <div class="success-ui" id="successBox"><h2>âœ“ Copied!</h2><p>Key successfully copied.</p><button onclick="closeModal()" style="background:#000; color:#fff; border:none; padding:10px 25px; border-radius:12px; margin-top:15px;">OK</button></div>

    <script>
        const SALT = "EP_SECURE_2026_V4"; 
        function updateTime() {
            const options = { timeZone: 'Asia/Karachi', hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: true };
            document.getElementById('pk-time').innerText = "PAKISTAN: " + new Intl.DateTimeFormat('en-US', options).format(new Date());
        }
        setInterval(updateTime, 1000); updateTime();

        function generate(seconds, btn) {
            const devID = document.getElementById('devID').value.trim();
            if (!devID) return alert("Enter Device ID");
            document.querySelectorAll('.btn-dur').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');

            const expiry = Math.floor(Date.now() / 1000) + seconds;

            // --- FIXED LOGIC TO MATCH RECEIPT ---
            let magicNumber = (expiry * 3).toString();
            let rawData = magicNumber + devID + SALT + expiry;
            
            // Signature: BTOA -> Reverse -> Substring (4, 14) -> UpperCase
            let sig = btoa(rawData).split('').reverse().join('').substring(4, 14).toUpperCase();

            document.getElementById('result-box').style.display = 'block';
            document.getElementById('keyOutput').innerText = `ADS-PRO-${devID}-${expiry}-${sig}`;
        }

        function copyKey() {
            const text = document.getElementById('keyOutput').innerText;
            navigator.clipboard.writeText(text).then(() => {
                document.getElementById('overlay').style.display = 'block';
                document.getElementById('successBox').style.display = 'block';
            });
        }
        function closeModal() { document.getElementById('overlay').style.display = 'none'; document.getElementById('successBox').style.display = 'none'; }
    </script>
</body>
